<UserControl x:Class="FinalPoject.ui.controls.RoomControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalPoject.ui.controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" Background="#FF17181C" HorizontalAlignment="Center" VerticalAlignment="Center" Width="670.666">
    <Grid>
        <TextBlock x:Name="lblRoomName" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Foreground="#FFCDCDCD"><Run Text="Room Name"/><Run Text=": 4-1"/></TextBlock>
        <TextBlock x:Name="lblRoomType" HorizontalAlignment="Left" Margin="173,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" Foreground="#FFCDCDCD"><Run Text="Room Type"/><Run Text=": Family Bedroom"/></TextBlock>
        <local:HotelButton x:Name="btnBook" HorizontalAlignment="Left" Margin="555,9,0,0" VerticalAlignment="Top" Height="20" Width="105" ButtonText="Book" MouseUp="btnBook_MouseUp"/>
        <TextBlock x:Name="lblRoomAvailable" HorizontalAlignment="Left" Margin="353,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" Foreground="#FFCDCDCD" Text="Available: "/>
    </Grid>
</UserControl>
