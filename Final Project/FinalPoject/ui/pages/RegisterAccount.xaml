        <TextBlock x:Name="lblUsername_Copy1" HorizontalAlignment="Left" Margin="26,171,0,0" TextWrapping="Wrap" Text="Street" VerticalAlignment="Top" Width="36" Foreground="#FFBFBFBF"/>
